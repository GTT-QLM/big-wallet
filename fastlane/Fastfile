lane :deliver_all_metadata do

  update_fastlane
  
  platform :ios do
    deliver(
      metadata_path: "./fastlane/metadata",
      screenshots_path: "./fastlane/screenshots/ios",
      overwrite_screenshots: true,
      platform: "ios",
      run_precheck_before_submit: false,
    )
  end

  platform :mac do
    deliver(
      metadata_path: "./fastlane/metadata",
      screenshots_path: "./fastlane/screenshots/macos",
      overwrite_screenshots: true, 
      platform: "osx",
      run_precheck_before_submit: false,
    )
  end
end

lane :release_all do

  update_fastlane
  
  platform :ios do
    gym(scheme: "Wallet iOS", output_directory: "fastlane/build", clean: true)
    deliver(
      metadata_path: "./fastlane/metadata",
      screenshots_path: "./fastlane/screenshots/ios",
      overwrite_screenshots: true,
      platform: "ios",
      run_precheck_before_submit: false,
    )
  end

  platform :mac do
    gym(scheme: "Wallet", output_directory: "fastlane/build", clean: true)
    deliver(
      metadata_path: "./fastlane/metadata",
      screenshots_path: "./fastlane/screenshots/macos",
      overwrite_screenshots: true, 
      platform: "osx",
      run_precheck_before_submit: false,
    )
  end
end

default_platform(:mac)

platform :mac do

  lane :dev do
    gym(
      scheme: "Wallet",
      output_directory: "fastlane/build",
      configuration: "Debug",
      clean: false,
      skip_archive: true,
      silent: true,
      skip_package_dependencies_resolution: true,
      disable_package_automatic_updates: true,
      xcodebuild_formatter: '',
    )
    sh "open #{File.expand_path('build/Wallet.app')}"
  end

end